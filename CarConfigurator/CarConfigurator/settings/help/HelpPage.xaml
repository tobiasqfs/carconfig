<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarConfigurator.HelpPage">
    <ContentPage.Content>
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection>
                    <ViewCell x:Name="miInfo"
                              Tapped="ViewCell_Tapped">
                        <StackLayout Orientation="Horizontal"
                                     Padding="5"
                                     Margin="0, 0, 0, 0">
                            <Label x:Name="miInfoLabel"
                                   VerticalOptions="CenterAndExpand"></Label>
                        </StackLayout>
                    </ViewCell>
                    <SwitchCell x:Name="miBuggy"
                                OnChanged="miBuggy_OnChanged">
                    </SwitchCell>
                    <SwitchCell x:Name="miNewVersion"
                                OnChanged="miNewVersion_OnChanged">
                    </SwitchCell>
                    <SwitchCell x:Name="miLoadTest"
                                OnChanged="miLoadTest_OnChanged">
                    </SwitchCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>